                        <tbody>
                            @foreach (var endereco in contato.Enderecos)
                            {
                                <tr id="endereco-@endereco.Id">
                                    <td>@endereco.Logradouro</td>
                                    <td>@endereco.Numero</td>
                                    <td>@endereco.Cidade</td>
